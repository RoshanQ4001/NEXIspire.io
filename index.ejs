<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NEXispire - Crafting Digital Experiences</title>
    <link rel="stylesheet" href="/stylesheet/style.css">
    <script src="/javascript/script.js" defer></script>
</head>
<body>

    <!-- Navigation Bar -->
    <nav>
        <div class="logo">
            <img src="/images/logo.jpg" alt="NEXispire Logo">
        </div>
        <ul class="nav-links">
            <li><a href="/">Home</a></li>
            <li><a href="/services">Services</a></li>
            <li><a href="/portfolio">Portfolio</a></li>
            <li><a href="/blog">Blog</a></li>
            <li><a href="/faq">FAQ</a></li>
            <li><a href="/contact">Contact</a></li>
        </ul>
    </nav>
    

    <!-- Landing Section -->
    <section id="home" class="landing">
        <div class="landing-content">
            <h1 class="fade-in">NEXIspire</h1>
            <p class="fade-in">Crafting Digital Experiences for Small Businesses</p>
            <button class="fade-in">Get Started</button>
        </div>
        <div class="wave"></div>
    </section>

    <!-- About Section -->
    <section id="about" class="about">
        <h2>About Us</h2>
        <p>We build, host, and manage websites that cater to small business needs, providing tailored services based on the traffic demands of your business.</p>
    </section>

    <!-- Pricing Section -->
    <section id="pricing" class="pricing">
        <h2>Pricing Plans</h2>
        <div class="pricing-container">
            <!-- Pricing cards dynamically added via JS -->
        </div>
    </section>

    <!-- Team Section -->
    <section id="team" class="team">
        <h2>Meet Our Team</h2>
        <div class="team-container">
            <!-- Team members dynamically added via JS -->
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="contact">
        <h2>Contact Us</h2>
        <form id="contact-form">
            <input type="text" id="name" placeholder="Your Name" required>
            <input type="email" id="email" placeholder="Your Email" required>
            <textarea id="message" placeholder="Your Message" required></textarea>
            <button type="submit">Send Message</button>
        </form>
    </section>

</body>
</html>
